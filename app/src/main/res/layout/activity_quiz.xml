<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".quiz.QuizActivity">

    <EditText
        android:id="@+id/selectedClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selected Class" />

    <Button
        android:id="@+id/scanButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="scan"
        android:text="Scan" />

    <Button
        android:id="@+id/btnAddQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addQuiz"
        android:text="Add Quiz" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/quizSetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <Button
        android:id="@+id/btnCreateQuizSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        android:onClick="createQuizSet"
        android:text="Create Quiz Set"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnDeleteQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/red"
        android:onClick="deleteQuiz"
        android:text="Delete Quiz"
        android:textColor="@color/white" />

</LinearLayout>


